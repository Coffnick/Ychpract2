<Window x:Class="Ychpract2.Goods"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ychpract2"
        mc:Ignorable="d"
        Title="Goods" Height="450" Width="800">
    <Grid>
       
        <Label Content="Товары" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="36" Margin="0,10,0,0"/>

       
        <DockPanel VerticalAlignment="Top" HorizontalAlignment="Left" LastChildFill="False" Margin="10,0,0,0">
            <Button Content="ВЫХОД" HorizontalAlignment="Right" VerticalAlignment="Top" Width="76" Background="#FF31E6BD" Click="Exit" Margin="0,10,10,10"/>
        </DockPanel>

        
        <DockPanel VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,75,0,0"/>
        <DataGrid x:Name="AdminDataGrid" AutoGenerateColumns="True" Margin="0,89,0,0" HorizontalAlignment="Center" Width="780" Height="270" VerticalAlignment="Top"/>
        <Button Content="Сохранить изменения" HorizontalAlignment="Center" Margin="0,364,0,0" Height="36" VerticalAlignment="Top" Width="140" Background="#FF31E6BD" />

    </Grid>
    
</Window>
